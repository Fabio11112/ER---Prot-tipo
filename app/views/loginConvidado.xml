<Alloy>
    <Window class="container">
        <View id="mainContainer">
            <ImageView id="imageInitial" image="/images/baleialogo/unnamed.png" />
            <View id="loginContainer">
                <Label id="loginTitle" text="Bem-vindo de Volta" />
                <Label id="loginDescription" text="Faça login para acessar o Sistema de Avistamentos." />
                <TextField id="usernameFieldConvidado" hintText="Digite seu e-mail" />
                <TextField id="passwordField" hintText="Digite sua senha" passwordMask="true" />
                <Button id="btnLogin" onclick="click" title="LOGIN"/>
                <Label id="registerLink" text="Não tem uma conta? Cadastre-se aqui." />
            </View>
        </View>    
    </Window>
</Alloy>
